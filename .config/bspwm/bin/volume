#!/bin/bash

# You can call this script like this:
# $./volume --up
# $./volume --down
# $./volume --toggle
 
# Get Volume
get_volume() {
	volume=`amixer get Master | tail -n1 | awk -F ' ' '{print $5}' | tr -d '[]'`
	echo "$volume"
}
 
# Get icons
get_icon() {
	vol="$(get_volume)"
	current="${vol%%%}"
	if [[ "$current" -eq "0" ]]; then
		icon='~/.config/bspwm/bin/icons/volume-mute.png'
	elif [[ ("$current" -ge "0") && ("$current" -le "30") ]]; then
		icon='~/.config/bspwm/bin/icons/low-volume.png'
	elif [[ ("$current" -ge "30") && ("$current" -le "60") ]]; then
		icon='~/.config/bspwm/bin/icons/volume.png'
	elif [[ ("$current" -ge "60") && ("$current" -le "100") ]]; then
		icon='~/.config/bspwm/bin/icons/high-volume.png'
	fi
}
 
# Increase Volume
inc_volume() {
	amixer -Mq set Master,0 5%+ unmute && get_icon && dunstify -u low --replace=69 -i "$icon" "Volume : $(get_volume)"
}
 
# Decrease Volume
dec_volume() {
	amixer -Mq set Master,0 5%- unmute && get_icon && dunstify -u low --replace=69 -i "$icon" "Volume : $(get_volume)"
}
 
# Toggle Mute
toggle_mute() {
	status=`amixer get Master | tail -n1 | grep -wo 'on'`
 
	if [[ "$status" == "on" ]]; then
		amixer set Master toggle && dunstify -u low --replace=69 -i '~/.config/bspwm/bin/icons/volume-mute.png' "Mute"
	else
		amixer set Master toggle && get_icon && dunstify -u low --replace=69 -i "$icon" "Unmute"
	fi
}
 
# Execute accordingly
if [[ "$1" == "--get" ]]; then
	get_volume
elif [[ "$1" == "--up" ]]; then
	inc_volume
elif [[ "$1" == "--down" ]]; then
	dec_volume
elif [[ "$1" == "--toggle" ]]; then
	toggle_mute
else
	get_volume
fi