[global/wm]
margin-bottom = 0
margin-top = 0

include-file = ~/.config/bspwm/polybar/bin/colors
include-file = ~/.config/bspwm/polybar/bin/modules

;  _                    
; | |__   __ _ _ __ ___ 
; | '_ \ / _` | '__/ __|
; | |_) | (_| | |  \__ \
; |_.__/ \__,_|_|  |___/


[bar/base]
font-0 = "JetBrains Mono:style=Regular:size=9:antialias=true;2"
font-1 = "Iosevka Nerd Font:size=10:antialias=true;2"

padding = 0
border-size = 2
border-color = ${color.Background-A}

height = 30
;radius = 10
;Works very well with a radius like this! Put it on every bar.

background = ${color.Background}
foreground = ${color.Foreground}
override-redirect = false
offset-y = 5

wm-restack = bspwm


[bar/top-ws]
inherit = bar/base
width = 15% 
;22.0%

offset-x = 1%
line-size = 2

; Options available for the workspaces module
; bspwm
; workspaces
modules-center = workspaces 


[bar/top-title]
inherit = bar/base
width = 23%

offset-x = 18.5%

modules-left = mod title
;;windowlist
;xxwindow
;title

[bar/top-music]
inherit = bar/base
width = 23%

offset-x = 44.5%
; Spotify (uses playerctl)
; modules-left = previous playpause next spotify
; Mpd
modules-left = mpd mpd-scroll 

[bar/top-tray]
inherit = bar/base
width = 29%

offset-x = 70%

modules-right = pkg battery backlight volume network date


