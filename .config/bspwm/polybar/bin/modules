[module/screenshot]
type = custom/script
exec = echo ""

click-right = scrot "$(date +%s).png" -e 'mv "$f" ~/Imágenes/Screenshots/ && dunstify -r "991030" "Say cheese..." "$f" -a scrot' &

click-left = image=$(date +%s).png && maim -s -s -b 5.0 -p -5 -c 1,0,0.294 "~/Imágenes/Screenshots/$image" && dunstify -r "991030" "Say cheese..." "$image" -a scrot &

