[module/music]
type = custom/script
interval = 1
tail = true
; Only applies if <icon-X> is used
label-song = 

label =  %output% 
exec = ~/.config/bspwm/polybar/scripts/scroll_status.sh
click-left = playerctl previous
click-center = playerctl play-pause
click-right = playerctl next


;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/music-prev]
type = custom/script
interval = 1
format = <label>
label = 玲
exec = ~/.config/bspwm/polybar/scripts/music
exec-if = "pgrep spotify"
click-left = playerctl previous

[module/music-play-pause]
type = custom/script
interval = 1
format = <label>
label = 契
exec = ~/.config/bspwm/polybar/scripts/music
exec-if = "pgrep spotify"
click-left = playerctl play-pause

[module/music-next]
type = custom/script
interval = 1
format = <label>
label = 怜
;exec = echo "next-song-symbol"
exec = ~/.config/bspwm/polybar/scripts/music
exec-if = "pgrep spotify"
click-left = playerctl next

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
;Spotify modules

[module/previous]
type = custom/script
exec = echo "  "
exec-if = "pgrep spotify"
format-background = ${color.Peach}
format-foreground = ${color.Black-3}
tail = true
interval = 1
click-left = playerctl previous -p spotify


[module/next]
type = custom/script
exec = echo "  "
exec-if = "pgrep spotify"
format-background = ${color.Peach}
format-foreground = ${color.Black-3}
tail = true
interval = 1
click-left = playerctl next -p spotify

[module/playpause]
type = custom/script
exec = echo ""
exec-if = "pgrep spotify"
format-background = ${color.Peach}
format-foreground = ${color.Black-3}
tail = true
interval = 1
click-left = "playerctl -p spotify play-pause"


[module/spotify]
type = custom/script
exec = ~/.config/bspwm/polybar/scripts/scroll_status.sh
exec-if = "pgrep spotify"
format-padding = 1
tail = true
interval = 1


