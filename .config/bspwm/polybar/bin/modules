;;mount-1 = /media/sda1

;;mount-2 = /media/sda2

;;mount-3 = /media/sda3

format-mounted = <bar-used> <label-mounted>

bar-used-width = 8

bar-used-fill = ▐

bar-used-empty = ▐

bar-used-indicator =

bar-used-empty-foreground = ${color.Gray-2}

bar-used-fill-foreground = ${color.Sky}

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%

;label-unmounted = %mountpoint% not mounted

;label-unmounted-foreground = ${colors.foreground-alt}

