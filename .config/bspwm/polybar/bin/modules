[module/title]
type = internal/xwindow
format = <label>
;format-background = 
;format-foreground = #000
format-padding = 1

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = ${color.Foreground}

