
[global/wm]
margin-bottom = 0
margin-top = 0

include-file = ~/.config/bspwm/polybar/bin/colors

[bar/main]
font-0 = "JetBrains Mono:style=Regular:size=9:antialias=true;2"
font-1 = "Iosevka Nerd Font:size=10:antialias=true;2"
width = 100%
height = 20
background = "#00000000"
foreground = ${color.Foreground}
override-redirect = true
offset-y = 97.5%

wm-restack = bspwm

offset-x = 0

modules-left = system-bluetooth-bluetoothctl

[module/system-bluetooth-bluetoothctl]
type = custom/script
exec = ~/.config/bspwm/polybar/scripts/system-bluetooth-bluetoothctl.sh
tail = true
format-foreground = ${color.Background-A}
click-left = ~/.config/bspwm/polybar/scripts/system-bluetooth-bluetoothctl.sh --toggle &
click-right = blueberry &